{ "name": "movie-app-ng1",
  "version": "1.0.0",
  "description": "creating a movie app using Angular 1",
  "main": "../build/javascripts/bundle.js",
  "scripts": {
    "build:js:app": "browserify -d public/javascripts/app.main.js > public/javascripts/app.bundle.js",
    "build:js:admin": "browserify -d public/javascripts/admin.main.js > public/javascripts/admin.bundle.js",
    "build:js": "mkdirp ../build/public/javascripts && npm run build:js:app & npm run build:js:admin",
    "build:html": "mkdirp ../build/public/ && htmlmin -o ../build/public/index.html public/index.html",
    "browsersync": "browser-sync start --proxy localhost:8080 --files 'public/*'",
    "build": "npm run clean && npm run build:js & npm run build:html",
    "watch:js:app": "watchify public/javascripts/app.main.js -d -o public/javascripts/app.bundle.js --verbose",
    "watch:js:admin": "watchify public/javascripts/admin.main.js -d -o public/javascripts/admin.bundle.js --verbose",
    "watch:js": "npm run build && parallelshell \"npm run watch:js:app\" \"npm run watch:js:admin\"",
    "test:node": "mocha -u bdd -R spec test/**/*.js",
    "test:node:watch": "npm run test:node -w",
    "test:browser": "karma start",
    "clean": "rm -rf ../build/*",
    "test": "npm run test:node & npm run test:browser",
    "nodemon": "nodemon server.js -e js,pug --ignore public/",
    "start": "npm run build",
    "watch": "parallelshell \"npm run browsersync\" \"npm run watch:js\" \"npm run nodemon\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdelJS/movie-app-ng1"
  },
  "keywords": ["angular1", "movie", "app", "ES6"],
  "author": {
    "name": "Adel Jojo",
    "email": "bigfanjs@gmail.com",
    "twitter": "@bigfanjs"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AdelJS/movie-app-ng1/issues"
  },
  "homepage": "https://github.com/AdelJS/movie-app-bb#readme",
  "devDependencies": {
    "browserify": "13.0.1",
    "browser-sync": "2.12.8",
    "karma": "1.1.2",
    "mocha": "3.0.2",
    "karma-mocha": "1.1.1",
    "karma-chai": "0.1.0",
    "karma-browserify": "5.1.0",
    "nodemon": "1.10.2",
    "wathcify": "3.7.0",
    "babel-preset-es2015": "6.6.0",
    "babelify": "7.3.0",
    "pugify": "1.0.5",
    "proxyquireify": "3.2.1"
  } }
